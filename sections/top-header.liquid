
{% if section.settings.topbar_enabled %}
    <div class="topbar d-flex align-items-center" data-top-bar style="background-color: {{ section.settings.topbar_bg_color }}; min-height: {{ section.settings.topbar_height }}px;">
        <div class="container">
            <div class="d-block text-center ls-1 py-1" style="color: {{ section.settings.topbar_text_color }};font-size: {{ section.settings.topbar_font_size }}; font-family: {{ section.settings.header_topbar_font_family }}; font-weight: {{ section.settings.header_topbar_font_weight }}">
                {{ section.settings.topbar_text }}
            </div>
        </div>
    </div>
{% endif %}

{% schema %}
{
    "name": "t:sections.top-header.name",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.top-header.settings.header_topbar.label"
        },
        {
            "type": "checkbox",
            "id": "topbar_enabled",
            "label": "t:sections.top-header.settings.header_topbar_enabled.label",
            "default": false
        },
        {
            "type": "html",
            "id": "topbar_text",
            "label": "t:sections.top-header.settings.header_topbar_text.label"
        },
        {
            "type": "color",
            "id": "topbar_bg_color",
            "label": "t:sections.top-header.settings.header_topbar_bg_color.label",
            "default": "#D29C7D"
        },
        {
            "type": "color",
            "id": "topbar_text_color",
            "label": "t:sections.top-header.settings.header_topbar_text_color.label",
            "default": "#ffffff"
        },
        {
            "type": "range",
            "id": "topbar_height",
            "label": "t:sections.top-header.settings.header_topbar_height.label",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "default": 40
        },
        {
            "type": "text",
            "id": "topbar_font_size",
            "label": "t:sections.top-header.settings.header_topbar_font_size.label",
            "default": "15px"
        },
        {
            "type": "text",
            "id": "header_topbar_font_family",
            "label": "t:sections.top-header.settings.header_topbar_font_family.label",
            "default": "Inter"
        },
        {
        "type": "select",
        "id": "header_topbar_font_weight",
        "options": [
         {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "300",
            "label": "300"
          },
          {
            "value": "400",
            "label": "400"
          },
          {
            "value": "500",
            "label": "500"
          },
          {
            "value": "600",
            "label": "600"
          },
          {
            "value": "700",
            "label": "700"
          }
        ],
        "default": "normal",
        "label": "t:sections.top-header.settings.header_topbar_font_weight.label"
        }
    ]
}
{% endschema %}