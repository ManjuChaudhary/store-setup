    {{ 'global-featured-columns.css' | asset_url | stylesheet_tag }}
    <section  style="background: {{ section.settings.section_bg_color }}; color: {{ section.settings.section_txt_color }};" data-section-id="{{ section.id }}">
        {% if section.settings.fluid_padding %}<div class="section-content pb-0">{% endif %}
            <div class="{% if section.settings.fluid_layout %}container-fluid p-0 overflow-hidden{% else %}container{% endif %}">
                {% if section.settings.heading != blank  or section.settings.txt != blank %}
                <div class="row justify-content-center text-center">
                    <div class="col-xl-6 col-lg-7 col-md-8 px-xl-4 mb-5"> 
                        {% if section.settings.heading != blank %}
                            <h2 class="mb-3 section-title">{{ section.settings.heading }}</h2>
                        {% endif %}
                        {% if section.settings.txt != blank %}
                            <div>{{ section.settings.txt }}</div>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% if section.blocks.size > 0 %}
                    <div class="row {% if section.settings.fluid_layout %}no-gutter{% endif %}">      
                        {% for block in section.blocks %}
                            <div class="col-md-6 col-12 mb-md-0 mb-40" data-block-id="{{ block.id }}"> 
                                <a {% if block.settings.btn_link %} href="{{ block.settings.btn_link }}" {% endif %} class="collection-card d-block">
                                    {%- if block.settings.image != blank -%}
                                        <img 
                                        srcset="
                                        {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                                        {%- if block.settings.image.width >= 535 -%}{{ block.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
                                        {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                                        {{ block.settings.image | image_url }} {{block.settings.image.width}}w"
                                        src="{{ block.settings.image | image_url: width: 50 }}"
                                        sizes="(min-width: {{ settings.container_width }}) {{ settings.container_width | minus: 100 | divided_by: 3 }}px, (min-width: 768px) calc((100vw - 130px) / 2), 50vw"
                                        alt="{{ block.settings.image.alt | default: block.settings.heading  | escape }}"
                                        height="{{ block.settings.image.height }}"
                                        width="{{ block.settings.image.width }}"
                                        loading="lazy" >
                                    {%- endif -%}
                                    {% if block.settings.enable_overlay %}
                                        <div class="overlay" style="background: linear-gradient(180deg, rgba(0, 0, 0, 0) 72.2%, rgba(0, 0, 0, 0.325) 100%);"></div>
                                    {% endif %}
                                    <div class="collection-card-body p-lg-6 p-md-4 p-3 {{block.settings.alignment}}">
                                        <h6 class="mb-2" style="color: {{ block.settings.txt_color }};">{{block.settings.subheading }}</h6>
                                        <h2 class="heading_txt mb-md-2 mb-1" style="color: {{ block.settings.txt_color }};">{{ block.settings.heading | escape }}</h2>
                                        <p class="caption_txt mb-md-5 mb-3" style="color: {{ block.settings.txt_color }};">{{ block.settings.caption | escape }}</p>
                                        {% if block.settings.btn_txt != blank %}
                                        <span class="btn btn{% if block.settings.btn_type == 'outline' %}-{% endif %}{{ block.settings.btn_type }}-{{ block.settings.btn_variant }} {{ block.settings.btn_size }}">{{ block.settings.btn_txt }}</span>
                                        {% endif %}
                                    </div>
                                </a> 
                            </div>
                        {% endfor %}
                    </div>  
                {% endif %}
            </div>
        {% if section.settings.fluid_padding %}</div>{% endif %}
    </section>
